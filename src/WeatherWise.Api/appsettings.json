{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=Data/weatherwise.db"
  },
  "Jwt": {
    "Key": "jwt_Key",
    "Issuer": "weatherwise-api",
    "Audience": "weatherwise-client",
    "ExpireDays": 7
  },
  "VapidKeys": {
    "Subject": "mailto:noreply@weatherwisedomain.com",
    "PublicKey": "PublicKey",
    "PrivateKey": "YOUR_GENERATED_PRIVATE_KEY"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      },
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
        "UseUtcTimestamp": true,
        "JsonWriterOptions": {
          "Indented": true
        }
      }
    },
    "Debug": {
      "LogLevel": {
        "Default": "Debug",
        "Microsoft.Hosting": "Debug"
      }
    },
    "EventSource": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "HealthChecks": {
    "Enabled": true,
    "EvaluationTimeInSeconds": 10
  },
  "OpenWeatherMap": {
    "ApiKey": "OpenWeatherMap_ApiKey"
  },
  "LocationIQ": {
    "ApiKey": "LocationIQ_ApiKey"
  },
  "AllowedHosts": "*",
  "Security": {
    "RequireHttps": true,
    "EnableXssProtection": true,
    "EnableHsts": true
  }
}
